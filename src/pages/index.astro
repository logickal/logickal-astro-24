---

<Layout title="Logickal Electronic Music." subhead="Eclectic Electricism">
  <div>
    <div class="flex items-center justify-center min-h-screen">
      <div class="content-center text-center">
        <h1 class="text-4xl font-mono">logickal</h1>
        <h3 class="text-xl font-sans">eclectic electronic musick</h3>
      </div>
    </div>
    <div class="flex flex-wrap justify-center">
	  {cards.map((card) => (
		<HomeCard title={card.title} link={card.link} image="" />
	  ))}
  </div>
</Layout>
