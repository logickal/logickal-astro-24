const images = import.meta.glob("../assets/imgBg/*");

const cards = [
  {
	title: "Musick",
	//image: "musick.jpg",
	link: "/discog",
  },
  {
	title: "Videos",
	//image: "videos.jpg",
	link: "/videos",
  },
  {
	title: "About",
	//image: "about.jpg",
	link: "/about",
