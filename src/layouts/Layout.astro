---
import { Head } from "astro-capo";
import { SEOMetadata } from "astro-seo-metadata";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import backgroundImage from "../assets/imgBg/riso-bg-lg.jpg";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<script>
  import SimpleParallax from "simple-parallax-js/vanilla";

  document.addEventListener('DOMContentLoaded', () => {
    var image = document.getElementsByClassName("parallax-img");
    new SimpleParallax(image, { scale: 1.8 });
  });

  document.addEventListener('astro:after-swap', () => {
    var image = document.getElementsByClassName("parallax-img");
    new SimpleParallax(image, { scale: 1.8 });
  });
</script>

<html lang="en" class="text-gray-400">
  <Head>
    <SEOMetadata
      title={title}
      description="Logickal Music - Esoteric electronic music from Nashville, TN."
      author="Jeremy Dickens"
      astroSitemap={true}
      astroGenerator={true}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
  </Head>
  <body class="font-sans text-zinc-500 bg-gray-900">
    <div class="w-full min-h-[3700px] relative">
      <div class="absolute inset-0 z-0">
        <Image
		  id="parallax-bg"
          src={backgroundImage}
          alt="background image"
          class="parallax-img w-full h-full object-cover"
          height={6000}
        />
      </div>
      <div class="relative z-10">
        <Header />
        <main class="m-auto">
          <slot />
        </main>

      </div>
	  <div class="absolute bottom-0 w-full">
		<Footer />
	  </div>
    </div>
  </body>
</html>
