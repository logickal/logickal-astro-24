---
import Header from '../components/Header.astro';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-gray-400">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans text-zinc-500 bg-gray-900">
		<Header />
		<div class="w-full  bg-[url('/riso-bg-lg.jpg')] bg-no-repeat bg-cover bg-center bg-fixed">
			<main class="m-auto">
			<slot />
			</main>
			<footer>

			</footer>

		</div>

	</body>
</html>
