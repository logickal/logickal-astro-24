---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import backgroundImage from "../assets/imgBg/riso-bg-lg.jpg";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<script>
  import SimpleParallax from "simple-parallax-js/vanilla";
  var image = document.getElementsByClassName("parallax-div");
  new SimpleParallax(image);
  console.log("Parallax loaded");
  console.log(SimpleParallax);
</script>

<html lang="en" class="text-gray-400">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans text-zinc-500 bg-gray-900">
    <div class="w-full min-h-[6000px]">
      <div class="absolute inset-0 z-0">
        <div class="parallax-div">
          <Image
            src={backgroundImage}
            alt="background image"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="relative z-10">
          <Header />
          <main class="m-auto relative z-10">
            <slot />
          </main>

          <div class="absolute bottom-0 left-0 w-full">
            <Footer />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
