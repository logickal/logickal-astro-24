---
import { Head } from "astro-capo";
import { SEOMetadata } from "astro-seo-metadata";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import backgroundImage from "../assets/imgBg/riso-bg-lg.jpg";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<script>
  import SimpleParallax from "simple-parallax-js/vanilla";
  var image = document.getElementsByClassName("parallax-img");
  new SimpleParallax(image, { scale: 3 });
</script>

<html lang="en" class="text-gray-400">
  <Head>
    <SEOMetadata
      title={title}
      description="Logickal Music - Esoteric electronic music from Nashville, TN."
      author="Jeremy Dickens"
      astroSitemap={true}
      astroGenerator={true}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <ViewTransitions />
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-VVDT5TLECR"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

	  gtag("consent", "default", {
      ad_storage: "denied",
      ad_user_data: "denied",
      ad_personalization: "denied",
      analytics_storage: "denied",
  });
  
      gtag("config", "G-VVDT5TLECR");
    </script>
  </Head>
  <body class="font-sans text-zinc-500 bg-gray-900">
    <div class="w-full relative min-h-screen overflow-hidden">
      <div class="absolute inset-0 z-0">
        <Image
          src={backgroundImage}
          alt="background image"
          class="parallax-img w-full object-cover"
        />
      </div>
      <div class="relative z-10">
        <Header />
        <main class="m-auto">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
