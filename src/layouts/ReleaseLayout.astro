---
import { Head } from "astro-capo";
import { SEOMetadata } from "astro-seo-metadata";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-gray-400">
  <Head>
    <SEOMetadata
      title={title}
      description="Logickal Music - Esoteric electronic music from Nashville, TN."
      author="Jeremy Dickens"
      astroSitemap={true}
      astroGenerator={true}
      image="https://logickalmusic.com/og-splash-image.jpg"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <ViewTransitions />
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-VVDT5TLECR"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

	  gtag("consent", "default", {
      ad_storage: "denied",
      ad_user_data: "denied",
      ad_personalization: "denied",
      analytics_storage: "denied",
  });
      gtag("config", "G-VVDT5TLECR");
    </script>
  </Head>
  <body class="font-sans text-zinc-500 bg-gray-900">
    <container class="bg-gray-600 w-1/2">
      <slot />
    </container>
  </body>
</html>
