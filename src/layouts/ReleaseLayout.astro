---
import {  Head } from 'astro-capo'
import { SEOMetadata } from 'astro-seo-metadata';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-gray-400">
	<Head>
		<SEOMetadata 
		title={title}
		description="Logickal Music - Esoteric electronic music from Nashville, TN."
		author='Jeremy Dickens'
		astroSitemap={true}
		astroGenerator={true}
	/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</Head>
	<body class="font-sans text-zinc-500 bg-gray-900">
		<container class="bg-gray-600 w-1/2">
			<slot />
		</container>

	</body>
</html>
