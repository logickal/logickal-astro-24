---
import { format } from 'date-fns';

const { type, discogDate } = Astro.props;
const formattedDate = format(new Date(discogDate), 'yyyy-MM-dd');

var style = '';

if (type == "dark") {
    style = "text-gray-800";
} else {
    style = "text-gray-200";
}

style = style + " font-mono text-xs italic";
---

<span class={style}>
    {formattedDate}
</span>
