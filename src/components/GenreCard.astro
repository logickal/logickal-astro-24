---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { Debug } from 'astro:components';

interface Props {
    genre: string;
    image: string;
    color: string;
}

const { genre, image, color } = Astro.props;
const images = import.meta.glob("../assets/imgBg/*");

---

<div class={`m-2 p-3 relative flex-col justify-between h-fit`}>
    <Image src={images[image]() as Promise<{ default: ImageMetadata; }>} alt={genre} class="" />
    <div class={`absolute inset-x-0 bottom-0 px-2 mx-2 py-5 bg-black bg-opacity-50`}> 
        <h3 class="text-lg font-bold">{genre}</h3>
    </div>
</div>
