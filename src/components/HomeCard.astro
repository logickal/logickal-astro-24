---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import tile0 from '../assets/card-image/tile-0.png';
import tile1 from '../assets/card-image/tile-1.png';
import tile2 from '../assets/card-image/tile-2.png';
import tile3 from '../assets/card-image/tile-3.png';
import tile4 from '../assets/card-image/tile-4.png';

interface Props {
    title: string;
    link: string;
    text: string;
    tile: number;
}

const { title, link, text, tile } = Astro.props;
let classes = null;

const tileImages = [tile0, tile1, tile2, tile3, tile4];
const imageSrc = tileImages[tile];

---




<a href={link}>
    <div class="group m-5 p-3 w-full h-44 hover:h-80 transition-all duration-1000 relative overflow-hidden border border-gray-300 rounded-,md">
        <div class="absolute inset-0 w-full h-full z-10">
            <Image src={imageSrc} alt={title} class="object-cover w-full h-80 z-0" />
        </div>
        <div class="relative bg-gray-300/15 p-2 group-hover:bg-gray-400/80 duration-1000 z-10">
            <h3 class="text-lg font-mono text-gray-900 font-black ">{title}</h3>
            <p class="text-transparent group-hover:text-gray-600">{text}</p>
        </div>
        <div class="text-right absolute bottom-0 right-0 text-gray-700 z-20">
            >>>>>
        </div>

    </div>